<h3>Home</h3>
<% @users.each do |user| %>
  <p>
    User: <%=link_to user.name, user %><br/>
    gravatar: <%= gravatar_image_tag(user.email, alt: user.name, filetype: :png, rating: 'pg', secure: true) %>
    &nbsp;  &nbsp;  &nbsp;
    uploaded:
    <% if user.avatar.present? %>
      <%= image_tag user.avatar.url(:thumb) %>    
    <% else %>
      user hasn't uploaded
    <% end %>
    &nbsp;  &nbsp;  &nbsp;
    account image helper: 
    <%= image_tag avatar_image_url(user), :alt => user.name %>
  </p>
<% end %>
