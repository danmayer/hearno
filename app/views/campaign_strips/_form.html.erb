<%= simple_form_for(@campaign_strip) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :input_html => {:rows => 8} %>
    <%#= f.association :parent %>

    <%= f.fields_for :campaign_elements do |builder| %>
      <%= render 'campaign_element_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add Element", f, :campaign_elements %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
