<h1>Listing Campaign Strips</h1>

<div class="table-responsive">
<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Creator</th>
    <th>Parent</th>
    <th>Campaign</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campaign_strips.each do |campaign_strip| %>
  <tr>
    <td><%= campaign_strip.title %></td>
    <td><%= campaign_strip.description %></td>
    <td><%= campaign_strip.creator.name %></td>
    <td><%= campaign_strip.parent.try(:title) %></td>
    <td><%= campaign_strip.campaign.title %></td>
    <td><button type="button" class="btn btn-primary"><%= link_to 'Show', campaign_strip %></button></td>
    <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_campaign_strip_path(campaign_strip) %></button></td>
    <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', campaign_strip, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>
</div>
<br />

